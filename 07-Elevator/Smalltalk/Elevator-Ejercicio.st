	^ cabinState = 'moving'! !

!ElevatorController methodsFor: 'accessing' stamp: 'asdf 10/2/2017 19:51:52'!
isCabinStopped
	^ cabinState = 'stopped'! !

!ElevatorController methodsFor: 'accessing' stamp: 'asdf 10/2/2017 20:24:20'!
isCabinWaitingForPeople
	^ true! !

